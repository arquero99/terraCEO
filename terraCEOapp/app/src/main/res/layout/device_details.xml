                android:textStyle="bold" />

            <TextView
                android:id="@+id/dia2"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#756c37c6"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Martes" />
            <TextView
                android:id="@+id/dia3"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#7c46d6"
                android:gravity="center"
                android:text="Miercoles"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dia4"
