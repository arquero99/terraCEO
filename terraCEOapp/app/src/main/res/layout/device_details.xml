            </TableLayout>
            <TableLayout
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/prob3"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#5c2799"
                    android:gravity="center"
                    android:text="PrecProb3"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sum3"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#8e8ecd"
                    android:gravity="center"
                    android:text="PrecSum3" />
            </TableLayout>
            <TableLayout
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/prob4"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#5c2799"
                    android:gravity="center"
                    android:text="PrecProb4"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sum4"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#8e8ecd"
                    android:gravity="center"
                    android:text="PrecSum4" />
            </TableLayout>
            <TableLayout
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/prob5"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#5c2799"
                android:gravity="center"
                android:text="PrecProb5"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sum5"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#8e8ecd"
                android:gravity="center"
                android:text="PrecSum5" />
        </TableLayout>
            <TableLayout
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/prob6"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#5c2799"
                    android:gravity="center"
                    android:text="PrecProb6"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sum6"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#8e8ecd"
                    android:gravity="center"
                    android:text="PrecSum6" />
            </TableLayout>
            <TableLayout
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/prob7"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#5c2799"
                    android:gravity="center"
                    android:text="PrecProb7"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sum7"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#8e8ecd"
                    android:gravity="center"
                    android:text="PrecSum7" />
            </TableLayout>
        </TableRow>

        <!--Temperatura-->
        <TableRow
            android:layout_weight="1"
            android:divider="#063970"
            android:showDividers="middle|beginning|end">
            <TextView
                android:id="@+id/temp1"
                android:layout_margin="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#80b10505"
                android:gravity="center"
                android:text="Temperature1" />
            <TextView
                android:id="@+id/temp2"
