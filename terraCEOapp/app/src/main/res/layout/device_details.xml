<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayDeviceDetails">

    <!--DeviceName-->
    <TextView
        android:id="@+id/deviceName"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/device_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--Linea-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="60dp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintTop_toBottomOf="@+id/deviceName">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#70000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

        </LinearLayout>

    </LinearLayout>

    <!--SensorInfo-->
    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginTop="40dp"
        android:divider="#063970"
        android:dividerHeight="2dp"
        android:showDividers="middle|beginning|end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deviceName">

        <TableRow
            android:layout_weight="1"
            android:divider="#063970"
            android:showDividers="middle|beginning|end">

            <TableLayout
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/sensorName1"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#7c46d6"
                    android:gravity="center"
                    android:text="Celda 1.1"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sensorData1"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#756c37c6"
                    android:gravity="center"
                    android:text="Celda 1.2" />
            </TableLayout>

            <TableLayout
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/sensorName2"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#5c2799"
                    android:gravity="center"
                    android:text="Celda 2.1"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sensorData2"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#8e8ecd"
                    android:gravity="center"
                    android:text="Celda 2.2" />
            </TableLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="#063970"
            android:showDividers="middle">

            <TableLayout
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/sensorName3"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#E0E0E0"
                    android:gravity="center"
                    android:text="Celda 3.1"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sensorData3"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#F5F5F5"
                    android:gravity="center"
                    android:text="Celda 3.2" />
            </TableLayout>

            <TableLayout
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/sensorName4"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#E0E0E0"
                    android:gravity="center"
                    android:text="Celda 4.1"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sensorData4"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#F5F5F5"
                    android:gravity="center"
                    android:text="Celda 4.2" />
            </TableLayout>
        </TableRow>
    </TableLayout>

    <!--Forecast-->
    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="20dp"
        android:divider="#063970"
        android:dividerHeight="2dp"
        android:showDividers="middle|beginning|end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout">

        <!--Dias de la semana-->
        <TableRow
