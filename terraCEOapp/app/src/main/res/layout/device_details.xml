                android:textStyle="bold" />
            <TextView
                android:id="@+id/dia6"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#756c37c6"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Sabado" />
            <TextView
                android:id="@+id/dia7"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#7c46d6"
                android:gravity="center"
                android:text="Domingo"
                android:textStyle="bold" />

        </TableRow>

        <!--Precipitacion-->
        <TableRow
            android:layout_weight="1"
            android:divider="#063970"
            android:showDividers="middle|beginning|end">

            <TableLayout
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/prob1"
                    android:layout_height="match_parent"
