            <TextView
                android:id="@+id/temp7"
                android:layout_margin="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#80b10505"
                android:gravity="center"
                android:text="Temperature7" />
        </TableRow>

        <!--Evapotranspiracion-->
        <TableRow
            android:layout_weight="1"
            android:divider="#063970"
            android:showDividers="middle|beginning|end">
            <TextView
                android:id="@+id/et1"
                android:layout_margin="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#800fc603"
                android:gravity="center"
                android:text="Evapotransp1" />
            <TextView
                android:id="@+id/et2"
                android:layout_margin="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#800fc603"
                android:gravity="center"
